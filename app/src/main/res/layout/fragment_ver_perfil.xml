
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alfonso.turristea.InformacionFragment">

    <LinearLayout

        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        android:weightSum="1">


        <ImageView
            android:id="@+id/imgViewLogo"
            android:layout_width="@dimen/center_width"
            android:layout_height="110dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/logo" />

        <ImageView
            android:id="@+id/imgViewAvatar"
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/tvTitulo1"
            android:text="Nombre:"
            android:layout_width="@dimen/center_width"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="7dp"
            android:gravity="center"
            android:typeface="serif"
            android:textColor="@color/textColor"
            android:textSize="19sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tvNombre"
            android:text="Juan Perez"
            android:layout_width="@dimen/center_width"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:gravity="center"
            android:typeface="serif"
            android:textColor="@color/textColor"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/tvTitulo2"
            android:text="Edad:"
            android:layout_width="@dimen/center_width"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="7dp"
            android:gravity="center"
            android:typeface="serif"
            android:textColor="@color/textColor"
            android:textSize="19sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tvEdad"
            android:text="25"
            android:layout_width="@dimen/center_width"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:gravity="center"
            android:typeface="serif"
            android:textColor="@color/textColor"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/tvTitulo3"
            android:text="GÃ©nero:"
            android:layout_width="@dimen/center_width"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="7dp"
            android:gravity="center"
            android:typeface="serif"
            android:textColor="@color/textColor"
            android:textSize="19sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tvGenero"
            android:text="Masculino"
            android:layout_width="@dimen/center_width"
            android:layout_height="wrap_content"

            android:layout_marginLeft="7dp"
            android:gravity="center"
            android:typeface="serif"
            android:textColor="@color/textColor"
            android:textSize="18sp" />

    </LinearLayout>

</FrameLayout>
