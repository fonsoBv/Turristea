<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alfonso.turristea.IniciarSesionFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <ImageView
            android:id="@+id/imgViewLogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            app:srcCompat="@drawable/logo" />

        <Button
            android:id="@+id/btnSitio1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity=""
            android:background="@android:color/background_light"
            android:text="Sitio de interés 1"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/btnSitio2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity=""
            android:background="@android:color/background_light"
            android:text="Sitio de interés 2"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/btnSitio3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity=""
            android:background="@android:color/background_light"
            android:text="Sitio de interés 3"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/btnSitio4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity=""
            android:background="@android:color/background_light"
            android:text="Sitio de interés 4"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/btnSitio5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity=""
            android:background="@android:color/background_light"
            android:text="Sitio de interés 5"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/btnSitio6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity=""
            android:background="@android:color/background_light"
            android:text="Sitio de interés 6"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp"
            android:textStyle="italic" />

    </LinearLayout>

</FrameLayout>
